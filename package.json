{
  "name": "@itaywol/something-le-engine",
  "version": "1.0.0",
  "description": "A wordle theme matching engine/framework",
  "main": "dist/index.js",
  "repository": {"url": "https://github.com/itaywol/something-le-engine.git"},
  "exports":{
    "./*":{
      "types":"./build/types/*.d.ts",
      "require":"./build/cjs/*.js",
      "import":"./build/esm/*.js",
      "default":"./build/cjs/*.js"
    }
  },
  "types": "./dist/types/*.d.ts",
  "scripts": {
    "test": "vitest",
    "build:clean":"rm -rf ./dist",
    "build:tsc":"tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
    "build":"npm-run-all build:clean build:tsc"
  },
  "keywords": [],
  "author": "Itay Wolfish",
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.3",
    "vitest": "^2.0.2"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
